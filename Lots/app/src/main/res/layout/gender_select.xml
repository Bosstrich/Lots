<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000ff"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/gender_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gender_select"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"


        />

    <ToggleButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_selection"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/gender_selector" />

    <ToggleButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/male"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/gender_selector2" />




</RelativeLayout>